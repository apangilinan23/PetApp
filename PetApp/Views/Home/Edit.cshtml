@model PetApp.Models.Pet

@{
    ViewData["Title"] = "Edit Pet";
}

<div class="container" style="max-width:720px;">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="card-title mb-3">Edit Pet</h3>

            <form asp-action="Edit" method="post" novalidate>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input asp-for="Id" type="hidden" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Breed" class="form-label"></label>
                    <input asp-for="Breed" class="form-control" />
                    <span asp-validation-for="Breed" class="text-danger small"></span>
                </div>

                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <label asp-for="Age" class="form-label"></label>
                        <input asp-for="Age" type="number" min="0" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger small"></span>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <label asp-for="Color" class="form-label"></label>
                        <input asp-for="Color" class="form-control" placeholder="#RRGGBB or color name" />
                        <span asp-validation-for="Color" class="text-danger small"></span>
                    </div>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Ready" class="form-check-input" />
                    <label asp-for="Ready" class="form-check-label"></label>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="PetList" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}